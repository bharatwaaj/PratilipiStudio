<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="PTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/PActionBar</item>
    </style>

    <style name="PActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/PTheme.ActionBar.TitleTextStyle</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="PTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="PTheme.Edit" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="ErrorAnimation" parent="android:Animation">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowEnterAnimation">@anim/slide_down_enter</item>
        <item name="android:windowExitAnimation">@anim/slide_up_exit</item>
    </style>

    <style name="PRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">18dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

</resources>